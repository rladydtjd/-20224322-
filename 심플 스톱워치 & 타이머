import tkinter as tk
import time

class SimpleTimer:
    def __init__(self, root):
        self.root = root
        self.root.title("My Python Timer")
        self.root.geometry("300x150")
        
        self.is_running = False
        self.start_time = 0
        self.elapsed_time = 0
        
        # 시간 표시 라벨
        self.label = tk.Label(root, text="00:00:00", font=("Helvetica", 30))
        self.label.pack(pady=20)
        
        # 버튼 프레임
        btn_frame = tk.Frame(root)
        btn_frame.pack()
        
        self.start_btn = tk.Button(btn_frame, text="Start", command=self.start)
        self.start_btn.pack(side=tk.LEFT, padx=10)
        
        self.stop_btn = tk.Button(btn_frame, text="Stop", command=self.stop)
        self.stop_btn.pack(side=tk.LEFT, padx=10)
        
        self.reset_btn = tk.Button(btn_frame, text="Reset", command=self.reset)
        self.reset_btn.pack(side=tk.LEFT, padx=10)
        
        self.update_timer()

    def start(self):
        if not self.is_running:
            self.start_time = time.time() - self.elapsed_time
            self.is_running = True

    def stop(self):
        if self.is_running:
            self.is_running = False

    def reset(self):
        self.is_running = False
        self.elapsed_time = 0
        self.label.config(text="00:00:00")

    def update_timer(self):
        if self.is_running:
            self.elapsed_time = time.time() - self.start_time
            minutes = int(self.elapsed_time // 60)
            seconds = int(self.elapsed_time % 60)
            millis = int((self.elapsed_time * 100) % 100)
            self.label.config(text=f"{minutes:02}:{seconds:02}:{millis:02}")
        
        self.root.after(50, self.update_timer) # 50ms마다 갱신

if __name__ == "__main__":
    root = tk.Tk()
    app = SimpleTimer(root)
    root.mainloop()
